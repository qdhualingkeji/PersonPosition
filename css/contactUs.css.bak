.logo_div{
	width:100%;height:460px;overflow-y:hidden;
}
.logo_div .logo_img{
	width:100%;
}
.logo_div .content_div{
	width:700px;margin:-578px auto 0;color:#fff;text-align: center;
}
.logo_div .title_div{
	font-weight: 500;font-size: 2.5rem;
}
.logo_div .describe_div{
	font-weight: 500;font-size: 1.3rem;line-height: 40px;margin-top:30px;
}

.iw_poi_title {color:#CC5522;font-size:14px;font-weight:bold;overflow:hidden;padding-right:13px;white-space:nowrap}
.iw_poi_content {font:12px arial,sans-serif;overflow:visible;padding-top:4px;white-space:-moz-pre-wrap;word-wrap:break-word}

.lxfs_div{
	width:1340px;margin:10px auto 30px;
}
.lxfs_div .title_div{
	line-height:30px;color:#333;font-size:16px;font-weight:bold;
}
.lxfs_div .row_div{
	line-height:30px;
}

.foot_div{
	width:100%;height:237px;background-color:#1F232A;
}
.foot_div .content_div{
	width:1340px;height:185px;margin:0 auto;
}
.foot_div .space_div{
	height:25px;
}
.foot_div .row_div{
	font-size: 15px;color: #FFFFFF;line-height: 45px;letter-spacing: 0;
}
.foot_div .bah_div{
	width:1440px;
	font-size: 14px;
	color: #999;
	text-align: center;
	letter-spacing: 0;
	margin:0 auto;
	padding-top:15px;
	border-top:#999 solid 1px;
}